{
  "name": "desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --port 5173",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:preload": "tsc -p tsconfig.preload.json --watch & cp src/preload/package.json dist/preload/",
    "dev:electron": "wait-on http://localhost:5173 dist/main/main.js dist/preload/index.js && electron . --dev",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json && cp src/preload/package.json dist/preload/",
    "build": "npm run build:main && npm run build:preload && vite build src/renderer && electron-builder",
    "typecheck": "tsc --noEmit",
    "postinstall": "electron-rebuild -f -w node-pty"
  },
  "build": {
    "appId": "com.jinzheio.commanddeck",
    "productName": "CommandDeck",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    }
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.0",
    "node-pty": "^1.0.0",
    "react": "^18.2.0",
    "react-diff-viewer-continued": "^3.4.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.19.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^31.0.2",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.0",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  }
}
