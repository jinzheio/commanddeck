{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist/preload",
    "rootDir": "src/preload",
    "types": ["node"]
  },
  "include": ["src/preload/**/*.ts"],
  "exclude": ["node_modules"]
}
